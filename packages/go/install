#!/bin/bash

. ../config/all.conf
if [[ ${INST_GO} -eq 1 ]]; then


GO_VER=1.10.2
GO_TAR=go${GO_VER}.linux-amd64.tar.gz
GO_URL=https://dl.google.com/go/${GO_TAR}


mkdir -p /usr/local
cd /usr/local

wget ${GO_URL}
tar -zxf ${GO_TAR}

echo 'export PATH=$PATH:/usr/local/go/bin' > /etc/profile.d/go.sh
chmod +x /etc/profile.d/go.sh

rm -f ${GO_TAR}

fi
